<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

  <definition name="myapp.app" template="/WEB-INF/layout/template.jsp">
  	<put-attribute name="title" value="Tiles Page"/>
  	<put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
  	<put-attribute name="menu" value="/WEB-INF/layout/menu.jsp"/>
  	<put-attribute name="body" value="/WEB-INF/layout/body.jsp"/>
  	<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
  </definition>
  
  <definition name="WILDCARD:*/*" extends="myapp.app">
  	<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>
  
  <definition name="nomyapp.app" template="/WEB-INF/layout/noTemplate.jsp">
  	<put-attribute name="title" value="Tiles Page"/>
  	<put-attribute name="body1" value="/WEB-INF/layout/body.jsp"/>
  </definition>
  
  <definition name="WILDCARD:qa/*" extends="nomyapp.app">
  	<put-attribute name="body1" value="/WEB-INF/views/qa/{2}.jsp"/>
  </definition>
  
  
  
</tiles-definitions>